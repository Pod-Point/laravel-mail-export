{
    "name": "pod-point/laravel-mail-export",
    "description": "A mailable trait to export mails to a storage disk once being sent",
    "keywords": ["laravel", "mail", "storage"],
    "homepage": "https://github.com/pod-point/laravel-mail-export",
    "license": "MIT",
    "authors": [
        {
            "name": "Pod Point Software Team",
            "email": "software@pod-point.com"
        }
    ],
    "require": {
        "php": "^7.1|^7.2|^7.3|^7.4|^8.0",
        "nesbot/carbon": "^1.0|^2.0",
        "illuminate/support": "~5.4|~5.5|~5.6|~5.7|~5.8|^6.0|^7.0|^8.0",
        "illuminate/mail": "~5.4|~5.5|~5.6|~5.7|~5.8|^6.0|^7.0|^8.0",
        "illuminate/filesystem": "~5.4|~5.5|~5.6|~5.7|~5.8|^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "orchestra/testbench": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "PodPoint\\MailExport\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PodPoint\\MailExport\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PodPoint\\MailExport\\MailExportServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
